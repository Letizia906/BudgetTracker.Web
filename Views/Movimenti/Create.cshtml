@model BudgetTracker.Web.Models.Movimento
@{
    ViewData["Title"] = "Nuovo Movimento";
}

<h2 class="fw-bold text-primary mb-4">Aggiungi Nuovo Movimento</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Create" method="post" class="row g-3">
            @Html.AntiForgeryToken()

            <div class="col-md-6">
                <label asp-for="Data" class="form-label">Data</label>
                <input asp-for="Data" type="date" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Descrizione" class="form-label">Descrizione</label>
                <input asp-for="Descrizione" class="form-control" />
                <span asp-validation-for="Descrizione" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Importo" class="form-label">Importo (€)</label>
                <input asp-for="Importo" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="Importo" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Entrata" class="form-label d-block">Tipo Movimento</label>
                <div class="form-check form-switch">
                    <input asp-for="Entrata" class="form-check-input" id="Entrata" />
                    <label class="form-check-label" for="Entrata">È un'entrata?</label>
                </div>
                <span asp-validation-for="Entrata" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Categoria" class="form-label">Categoria</label>
                <input asp-for="Categoria" class="form-control" />
            </div>

            <div class="col-md-6">
                <label asp-for="Tipo" class="form-label">Tipo</label>
                <input asp-for="Tipo" class="form-control" />
            </div>

            <div class="col-12">
                <label asp-for="Note" class="form-label">Note</label>
                <textarea asp-for="Note" class="form-control" rows="2"></textarea>
            </div>

            <div class="col-12 d-flex justify-content-end">
                <a asp-action="Index" class="btn btn-secondary me-2">Torna alla lista</a>
                <button type="submit" class="btn btn-primary">Salva</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
