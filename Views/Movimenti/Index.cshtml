@model IEnumerable<BudgetTracker.Web.Models.Movimento>

@{
    ViewData["Title"] = "Lista Movimenti";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-primary">Lista Movimenti</h2>
    <div>
        <a asp-action="Create" class="btn btn-success me-2">
            <i class="bi bi-plus-circle"></i> Aggiungi Movimento
        </a>
        <a asp-action="Converti" class="btn btn-secondary">
            <i class="bi bi-currency-exchange"></i> Converti Valuta
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-striped table-hover align-middle shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Data</th>
            <th>Descrizione</th>
            <th>Importo (€)</th>
            <th>Entrata</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="6" class="text-center text-muted">Nessun movimento registrato.</td>
            </tr>
        }
        else
        {
            @foreach (var m in Model)
            {
                <tr>
                    <td>@m.Id</td>
                    <td>@(m.Data != default ? m.Data.ToString("yyyy-MM-dd") : "-")</td>
                    <td>@m.Descrizione</td>
                    <td class="@(m.Entrata ? "text-success" : "text-danger") fw-bold">
                        @(m.Entrata ? "+" : "-")@m.Importo.ToString("F2")
                    </td>
                    <td>@(m.Entrata ? "Sì" : "No")</td>
                    <td>
                        <a asp-action="Elimina" asp-route-id="@m.Id" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash"></i> Elimina
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@if (Model.Any())
{
    <div class="card mt-4 shadow-sm">
        <div class="card-body">
            <h5 class="fw-bold text-secondary mb-3">
                <i class="bi bi-calculator"></i> Riepilogo Finanziario
            </h5>

            <div class="row text-center">
                <div class="col-md-4 mb-2">
                    <div class="alert alert-success m-0">
                        <strong>Totale Entrate:</strong>
                        <span class="ms-2">€@((ViewBag.TotaleEntrate ?? 0m).ToString("F2"))</span>
                    </div>
                </div>
                <div class="col-md-4 mb-2">
                    <div class="alert alert-danger m-0">
                        <strong>Totale Uscite:</strong>
                        <span class="ms-2">€@((ViewBag.TotaleUscite ?? 0m).ToString("F2"))</span>
                    </div>
                </div>
                <div class="col-md-4 mb-2">
                    <div class="alert alert-primary m-0">
                        <strong>Saldo Totale:</strong>
                        <span class="ms-2 fw-bold">€@((ViewBag.SaldoTotale ?? 0m).ToString("F2"))</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
